<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@android:color/black"
    tools:context=".chat.view.MainActivity">


    <EditText
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:id="@+id/frame_container_message"
        android:background="@android:color/white"
        android:gravity="top"
        android:padding="10dp"
        android:hint="Mensagem enviar" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:id="@+id/frame_send_message"
        android:layout_marginTop="10dp"
        android:background="@android:color/white"
        android:hint="Digite sua mensagem"
        android:paddingLeft="5dp"
        android:layout_below="@+id/frame_container_message" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_send_message"
        android:layout_below="@+id/frame_send_message"
        android:layout_centerHorizontal="true"
        android:text="Enviar" />


</RelativeLayout>
