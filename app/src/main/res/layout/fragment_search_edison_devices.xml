<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jonathan.bluetooth_project_iot.connectMain.view.fragments.SearchEdisonDevicesFragment">

   <Button
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:id="@+id/button_search_devices"
       android:text="Procurar dispositivos" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:background="@drawable/shape_corner_listview_connect"
        android:layout_below="@+id/button_search_devices"
        android:id="@+id/listview_edison_devices">
    </ListView>

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/loading"
        android:layout_centerInParent="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/feedback_could_not_find_edison"
        android:textSize="16sp"
        android:visibility="invisible"
        android:layout_centerInParent="true"
        android:text="NÃ£o foram encontrados dispositivos."
        />

</RelativeLayout>
